{
  "servers": {
    "Framelink Figma MCP": {
      "command": "npx",
      "args": ["-y", "figma-developer-mcp", "--stdio"],
      "env": {
        "FIGMA_API_KEY": "${input:figmaAPIKey}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "figmaAPIKey",
      "description": "Enter your figma API key",
      "password": true
    }
  ]
}
